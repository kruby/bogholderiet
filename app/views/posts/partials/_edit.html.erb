<% form_for(@post) do |f| %>
<h1>Redigering af blog indlæg
	<%= f.submit "[Opdater]", :class => 'button' %>
	<%= link_to '[Vis]', @post %>
	<%= link_to '[Tilbage]', bloggen_path %>
	
	</h1>

<%= error_messages_for :post %>

  <p>
    <b>Titel</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Brødtekst</b><br />
    <%= f.text_area :body, :size => '70x18' %>
  </p>
  
<% end %>





