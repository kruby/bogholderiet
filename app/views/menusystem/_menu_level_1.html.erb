<% @tabs.each do |page| -%> <!-- @tabs kommer fra application.rb -->

	<% if page.admin == true # and Menu.find(page.id).category == current_user.category %>
		<li class="admin_navlabel">
		<%= link_to page.navlabel, {:controller => page.controller_name, :action => 'index'} %> <!-- Alle admin sider ledes videre til deres index i views -->
		<% @c = page.children %>
		
		<%= render :partial => "menusystem/menu_level_2_admin" %>
		
	<% else %>
		<li class="user_navlabel"><%= link_to page.navlabel, {:controller => 'viewer', :name => page.navlabel.downcase, :action => 'show'} %>
		<%#= link_to page.navlabel, {:controller => page.controller_name, :action => 'show', :id => page.resource_id} %>
		<% @c = page.children %>
		
		<%= render :partial => "menusystem/menu_level_2" %>
		
	<% end %> 
<% end -%>