<%= render :partial => "layouts/menu" %>
<div id="admin_formular">

<%= error_messages_for :menu %>

<% form_for(@menu) do |f| %>

<h1>Nyt menupunkt
	<%= f.submit "[Opret]", :class => 'button'%><%= link_to '[Tilbage]', menus_path %>
</h1>

<p>
	<b>Aktiv</b><br />
	<%= f.check_box :active %>
</p>

<p>
	<b>Navn</b><br />
	<%= f.text_field :name %>
</p>

<p>
	<b>Titel</b><br />
	<%= f.text_field :title %>
</p>

<p>
	<b>Beskrivelse</b><br />
	<%= f.text_area :body %>
</p>

<% end %>



</div>
