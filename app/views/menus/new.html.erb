<%= render :partial => "layouts/menu" %>
<div id="admin_formular">
	
<h1>Nyt menupunkt</h1>

<%= error_messages_for :menu %>

<% form_for(@menu) do |f| %>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Active</b><br />
    <%= f.check_box :active %>
  </p>



  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', menus_path %>

</div>
