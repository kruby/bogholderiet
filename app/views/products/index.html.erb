<%= render :partial => "layouts/menu" %>
<div id="admin_liste">
<h1>Alle produkter <%= link_to '[Nyt produkt]', new_product_path %></h1>

<table border="0" cellspacing="0" cellpadding="3">
  <tr>
	<th class='pos'>ID</th>    
	<th>Akt.</th>
	<th>Navn</th>
	<th>Titel</th>
    <th>Overskrift</th>
	<th>Grafik</th>
	<th>Image_Class</th>
	<th>Handling</th>
