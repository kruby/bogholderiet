<%= render :partial => "layouts/menu" %>
<div id="admin_formular">	
<h1>Ny upload</h1>
<% form_for @asset, :html => { :multipart => true } do |f| %>
<% @image =  @asset.photo.url(:medium) %> 
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>

	<p>
    <b>Upload</b><br />
    <%= f.file_field :photo %>
  </p>

  <p>
	<b>Aktuelt foto</b> -> <%= @asset.photo_file_name %><br />
	<%= image_tag(@image, :class => 'edit_photo') %>
	
  </p>

    <%= f.submit "[Opdater]", :class => 'button' %>
  </p>


<% end %>

<%#= link_to 'Back', assets_path %>


</div>